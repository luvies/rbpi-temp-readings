{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "luvies/rbpi-temp-readings/sensor-patch",
  "title": "Sensor - PATCH",
  "description": "A sensor",
  "type": "object",
  "properties": {
    "serialNum": {
      "description": "The serial number of the sensor.",
      "type": "string"
    },
    "desc": {
      "description": "The description of the sensor.",
      "type": "string"
    }
  },
  "anyOf": [
    {
      "required": [
        "serialNum"
      ]
    },
    {
      "required": [
        "desc"
      ]
    }
  ]
}
